{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended", 
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "parser": "babel-eslint",
        "sourceType": "script"
    },
    "rules": {
        "eqeqeq": 2,
        "comma-dangle": 1,
        "no-console": 2,
        "no-var": 2,
        "no-debugger": 1,
        "no-extra-semi": 1,
        "no-extra-parens": 1,
        "no-irregular-whitespace": 0,
        "no-undef": 0,
        "no-unused-vars": 1,
        "semi": 0,
        "semi-spacing": 0,
        "valid-jsdoc": [
            2,
            { "requireReturn": false }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "space-before-function-paren": 0,
        "prefer-const": 2,
        "yoda": 2,
        "newline-before-return": 1
    }
}